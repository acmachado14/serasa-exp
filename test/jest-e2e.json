{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/**/*.d.ts",
    "!../src/**/*.module.ts",
    "!../src/prisma/**",
    "!../src/metrics/**"
  ],
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "../src/metrics/*",
    "../src/prisma/*",
    ".*\\.dto\\.ts$",
    ".*\\.module\\.ts$"
  ]
}
